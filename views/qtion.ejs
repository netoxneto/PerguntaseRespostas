<%- include ('./partials/header')%>
<body>
    <%- include ('./partials/navbar')%>

    <div class="container">
        <br>
        <div class="card">
            <div class="card-body">
            <h2><%= pergunta.title%></h2>
            <hr>
            <p><%= pergunta.description%></p>
            </div>
            <div class="card-footer">
                <form action="/resposta" method="POST">
                    <label>Resposta:</label>
                    <textarea placeholder="Descreva sua resposta aqui!" class="form-control" name="resp"></textarea>
                    <br>
                    <input type="hidden" name="qId" value="<%= pergunta.id%>">
                    <button class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
        <hr>
        <h3>Respostas</h3>
        
        <% respostas.forEach((respostas)=>{%>
            <hr>
            <div class="card">
                <div class="card-footer">
                    <p><%= respostas.corpo%></p>
                </div>
            </div>
        <%});%>        

    </div>
</body>
<%- include ('./partials/footer')%>