<%- include ('./partials/header.ejs'); %>
<body>
    <%- include ('./partials/navbar.ejs'); %>
    
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <a href="/question" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach((pergunta) =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.title %></h3>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" href="/question/<%=pergunta.id%>">Visualizar</a>
                </div>
            </div>
        <%});%>
        <br>
    </div>
</body>
<%- include ('./partials/footer.ejs'); %>
